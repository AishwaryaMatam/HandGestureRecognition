    "import cv2\n",
    "\n",
    "# Function to process the frames and return the extracted feature\n",
    "def process_frame(frame):\n",
    "    feature = extract_features(frame)\n",
    "    if feature is not None:\n",
    "        # Reshape the feature for the classifier\n",
    "        feature = feature.reshape(1, -1)\n",
    "        # Predict the gesture\n",
    "        prediction = clf.predict(feature)\n",
    "        # Get the name of the predicted gesture\n",
    "        gesture_name = le.inverse_transform(prediction)[0]\n",
    "        return gesture_name\n",
    "    return None\n",
    "\n",
    "# Start the webcam\n",
    "cap = cv2.VideoCapture(0)\n",
    "\n",
    "while True:\n",
    "    # Capture frame-by-frame\n",
    "    ret, frame = cap.read()\n",
    "    if not ret:\n",
    "        print(\"Failed to grab frame\")\n",
    "        break\n",
    "\n",
    "    # Flip the frame so that it's not the mirror view\n",
    "    frame = cv2.flip(frame, 1)\n",
    "\n",
    "    # Call the function to process the frame and predict the gesture\n",
    "    gesture_name = process_frame(frame)\n",
    "\n",
    "    # Display the resulting frame with predicted gesture name\n",
    "    if gesture_name:\n",
    "        cv2.putText(frame, gesture_name, (50, 50), cv2.FONT_HERSHEY_SIMPLEX, 1, (255, 255, 255), 2, cv2.LINE_AA)\n",
    "\n",
    "    cv2.imshow('Hand Gesture Recognition', frame)\n",
    "\n",
    "    # Press 'q' to exit the webcam window\n",
    "    if cv2.waitKey(1) & 0xFF == ord('q'):\n",
    "        break\n",
    "\n",
    "# When everything is done, release the capture\n",
    "cap.release()\n",
    "cv2.destroyAllWindows()\n"
   ]
