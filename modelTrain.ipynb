    "import cv2\n",
    "import numpy as np\n",
    "import os\n",
    "from sklearn import svm\n",
    "from sklearn.model_selection import train_test_split\n",
    "from sklearn.metrics import classification_report\n",
    "from sklearn.preprocessing import LabelEncoder\n",
    "\n",
    "# Function to process and extract features from an image\n",
    "def extract_features(image):\n",
    "    # Convert image to grayscale\n",
    "    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)\n",
    "    # Apply Gaussian blur\n",
    "    blur = cv2.GaussianBlur(gray, (5, 5), 0)\n",
    "    # Threshold the image\n",
    "    _, thresh = cv2.threshold(blur, 60, 255, cv2.THRESH_BINARY_INV + cv2.THRESH_OTSU)\n",
    "    # Find contours\n",
    "    contours, _ = cv2.findContours(thresh, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)\n",
    "    # If no contours are found, return None\n",
    "    if not contours:\n",
    "        return None\n",
    "    # Sort contours by area and take the largest one\n",
    "    contour = sorted(contours, key=cv2.contourArea, reverse=True)[0]\n",
    "    # Get contour features\n",
    "    moments = cv2.moments(contour)\n",
    "    # Use Hu Moments to capture the shape of the contour\n",
    "    huMoments = cv2.HuMoments(moments)\n",
    "    # Log transform Hu Moments to make them scale-invariant\n",
    "    for i in range(0, 7):\n",
    "        huMoments[i] = -1 * np.sign(huMoments[i]) * np.log10(abs(huMoments[i]))\n",
    "    return huMoments.flatten()\n",
    "\n",
    "# Function to load images and labels from dataset directory\n",
    "def load_dataset(dataset_directory):\n",
    "    images = []\n",
    "    labels = []\n",
    "\n",
    "    # List all subdirectories in the dataset directory\n",
    "    for gesture_name in os.listdir(dataset_directory):\n",
    "        gesture_folder = os.path.join(dataset_directory, gesture_name)\n",
    "        # Check if it's a directory\n",
    "        if os.path.isdir(gesture_folder):\n",
    "            # List all image files in the subdirectory\n",
    "            for file_name in os.listdir(gesture_folder):\n",
    "                file_path = os.path.join(gesture_folder, file_name)\n",
    "                if file_path.lower().endswith(('.png', '.jpg', '.jpeg')):\n",
    "                    # Read image\n",
    "                    image = cv2.imread(file_path)\n",
    "                    if image is None:\n",
    "                        print(f\"Failed to load image: {file_path}\")\n",
    "                        continue\n",
    "                    # Extract features\n",
    "                    feature = extract_features(image)\n",
    "                    if feature is not None:\n",
    "                        images.append(feature)\n",
    "                        labels.append(gesture_name)\n",
    "                    else:\n",
    "                        print(f\"Failed to extract features from image: {file_path}\")\n",
    "\n",
    "    if not images:\n",
    "        print(\"No valid images were found.\")\n",
    "        return None, None\n",
    "\n",
    "    return images, labels\n",
    "\n",
    "# Set the dataset directory\n",
    "dataset_directory = r'C:\\Users\\aishw\\Python_Program\\test'\n",
    "\n",
    "\n",
    "# Load images and labels\n",
    "images, labels = load_dataset(dataset_directory)\n",
    "if images is None or labels is None:\n",
    "    raise SystemExit(\"Dataset could not be loaded properly.\")\n",
    "\n",
    "# Encode labels into integers\n",
    "le = LabelEncoder()\n",
    "encoded_labels = le.fit_transform(labels)\n",
    "\n",
    "# Split data into training and test sets\n",
    "X_train, X_test, y_train, y_test = train_test_split(images, encoded_labels, test_size=0.2, random_state=42)\n",
    "\n",
    "# Initialize and train the SVM classifier\n",
    "clf = svm.SVC(kernel='linear', probability=True)\n",
    "clf.fit(X_train, y_train)\n",
    "\n",
    "# Predict on the test set\n",
    "y_pred = clf.predict(X_test)\n",
    "\n",
    "# Evaluate the model\n",
    "print(classification_report(y_test, y_pred, target_names=le.classes_))\n"
   ]
  },
